# ---- OpenAI API Credential ----

# Your OpenAI API key (or compatible service like Groq, Together, etc.)
OPENAI_API_KEY=

# Base URL for API (optional, defaults to https://api.openai.com/v1)
# For Groq: https://api.groq.com/openai/v1
# For Together: https://api.together.xyz/v1
OPENAI_API_BASE=https://api.openai.com/v1

# Model to use (optional, default: meta-llama/llama-3.2-3b-instruct:free)
LLM_MODEL_USED=

# ---- PostgreSQL Database ----

# Database connection string (PostgreSQL)
# Example: postgresql://username:password@localhost:5432/database
# Also supports: postgres://, postgresql://, postgresql+psycopg2://
DATABASE_URL=

# ---- Next.js Configuration ----

# Optional: Analytics and monitoring
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---- Thumbmark ----
# Optional: API key to enable enhanced visitorId generation.
NEXT_PUBLIC_THUMBMARK_API_KEY=
